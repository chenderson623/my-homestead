alias ..="cd .."
alias ...="cd ../.."

alias h='cd ~'
alias c='clear'

function serve() {
	if [[ "$1" && "$2" ]]
	then
		sudo dos2unix /vagrant/scripts/serve.sh
		sudo bash /vagrant/scripts/serve.sh "$1" "$2" 80
	else
		echo "Error: missing required parameters."
		echo "Usage: "
		echo "  serve domain path"
	fi
}

function backupdb() {
    local origPath=/var/lib/mysql

    local backupPath=/vagrant/data/mysql

    echo "Backing up mysql database ..."
    sudo tar -czf $backupPath/mysql.tar.gz -C $origPath .
    echo "Done."
}

function restoredb() {
    local origPath=/var/lib/mysql

    local backupPath=/vagrant/data/mysql

    echo "Stopping service ..."
    sudo service mysql stop
    echo "Removing existing files ..."
    sudo rm -rf $origPath/*
    echo "Restoring backup ..."
    sudo tar -xzf $backupPath/mysql.tar.gz -C $origPath
    echo "Starting service ..."
    sudo service $1 start
}